/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* USER CODE BEGIN 1 */
    delay_init(72);
  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_USART1_UART_Init();
  /* USER CODE BEGIN 2 */
    __HAL_UART_ENABLE_IT(&huart1,UART_IT_RXNE);
    __HAL_UART_ENABLE_IT(&huart1,UART_IT_IDLE);
	I2C_Init();
    LED0_ON;
    LED1_ON;
	
	while(AT24CXX_Check())//检测不到24c02
	{
		printf("检测不到24C02 ! \r\n");
		delay_ms(5000);
	}
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */

    while (1)
    {
		uint8_t address,ack;
		int nDevices = 0;

		printf("Scanning for I2C devices ...\r\n");
		for(address = 0x00 ;address < 0xFF; address++)
		{
			I2C_Start();
			I2C_Send_Byte(address);
			ack = I2C_Wait_Ack();
			if(ack == 0 && (nDevices %2 == 0))
			{
				printf("I2C device found at write address = 0x%02X\r\n",address);
				nDevices++;
				ack=0;
			}
			else if(ack == 0 && (nDevices %2 == 1)){
				printf("I2C device found at read  address = 0x%02X\r\n",address);	
				nDevices++;
				ack=0;
			}
  			I2C_Stop();
		}			
		if(nDevices == 0)
		{
			printf("No I2C devices found\r\n");
		}
		nDevices = 0;
		delay_ms(5000);
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
    }
  /* USER CODE END 3 */
}

